{
  "name": "Mojo HelpDesk Extension by Collective Bias",
  "version": "5.2",
  "manifest_version": 2,
  "description": "Unofficial extension for Mojo HelpDesk that adds additional functionallity for tickets received in Gmail.",
  "homepage_url": "http://collectivebias.com",
  "icons": {
    "16": "images/icons/icon16.png",
    "48": "images/icons/icon48.png",
    "128": "images/icons/icon128.png"
  },
  "options_page": "options/options.html",
  "web_accessible_resources": ["components/Portlet/stoplight.png","images/icons/*","options/images/*"],
  "permissions": [
    "storage",
    "https://mail.google.com/*",
    "https://mail.collectivebias.com/*",
    "https://mysupport.mojohelpdesk.com/*",
    "https://*.mojohelpdesk.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://mail.collectivebias.com/*",
        "https://*.mojohelpdesk.com/*"
      ],
      "css": [
        "components/Portlet/Portlet.css",
        "components/Forms/forms.css"
      ],
      "js": [
        "lib/jquery/jquery-2.1.4.min.js",
        "lib/react-0.14.5/react.js",
        "lib/react-0.14.5/react-dom.js",
        "lib/react_plugins/classnames.js",
        "lib/Shared.js",
        "components/Modal.js",
        "components/Portlet/Portlet.js",
        "services/API_Connector.js",
        "components/Forms/Ticket_Send_Message_Form.js",
        "components/Forms/Ticket_Attachments_Form.js",
        "components/Forms/Ticket_Update_Form.js",
        "components/Forms/Ticket_Description_Form.js",
        "components/Forms/Ticket_Messages_Form.js",
        "components/Forms/Mojo_Custom_Fields_Form.js",
        "components/Gmail_Sidebar.js",
        "lib/CB_Mojo_Extension.js",
        "CB_Mojo_Extension_Loader.js"
      ],
      "run_at": "document_end"
    }
  ]
}
